<div>
  <div class="recipe-container">
    <div class="recipeHeader">
      <h1> My Recipes </h1>
      <div class="addRecipeBtn">
      <%= link_to "New Recipe", new_recipe_path, class: "btn btn-primary" %>
      </div>
    </div>
    <hr>
    <ul>
      <% @recipes.includes(:user).each do |recipe| %>
        <li class="recipeCont list-unstyled">
          <div class="recipeLeft">
            <%= link_to recipe.name, recipe_path(recipe), class: 'recipeTitle btn btn-outline-primary btn-sm mx-2' %>
            <% if recipe.user == current_user %>
            <%= link_to 'remove', recipe_path(recipe), data: { turbo_method: :delete, confirm: 'Are you sure you want to remove this recipe?' }, class: 'removeBtn btn btn-outline-primary btn-sm' %>
            <% end %>
          </div>
          <div class="recipeRight">
            <p class="recipeDesc"><strong>Description:</strong> <%= recipe.description %></p>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

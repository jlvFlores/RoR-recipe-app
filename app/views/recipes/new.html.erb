<div class="container d-flex justify-content-center">
  <div class="recipe-container  mb-3 col-6 justify-content-center">
    <h1>Create a New Recipe</h1>

    <div class="formAddR">
      <%= form_with(model: @recipe, url: recipes_path, class: 'recipe-form') do |form| %>
        <div class="addField mb-3">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: "form-control" %>
        </div>
        <div class="addField mb-3">
          <%= form.label :description, class: "form-label" %>
          <%= form.text_area :description, class: "form-control" %>
        </div>
        <div class="addField mb-3">
          <%= form.label :preparation_time, class: "form-label" %>
          <%= form.number_field :preparation_time, class: "form-control" %>
        </div>
        <div class="addField mb-3">
          <%= form.label :cooking_time, class: "form-label" %>
          <%= form.number_field :cooking_time, class: "form-control" %>
        </div>
        <div class="addFieldCheck mb-3">
          <%= form.label :is_public?, class: "form-check-label" %>
          <%= form.check_box :is_public, class: "form-check-input" %>
        </div>

        <%= form.hidden_field :user_id, value: current_user.id %>

        <div class="actions d-flex justify-content-end mt-4">
          <%= form.submit "Create Recipe", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

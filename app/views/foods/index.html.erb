<%= link_to "Add New Food", new_food_path, style: "width: fit-content;" , class: "btn btn-primary" %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Unit</th>
      <th>Price</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.measurement_unit %></td>
        <td><%= food.price %></td>
        <td>
          <%= link_to "Delete", food, data: { turbo_method: :delete, confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
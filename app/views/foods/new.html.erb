<div class="container d-flex justify-content-center">
  <div class="recipe-container  mb-3 col-6 justify-content-center">
    <h1>Create a New Food Item</h1>

    <%= form_with model: @food, url: foods_path do |form| %>
      <div class="field mb-3">
        <%= form.label :name, class: "form-label"  %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= form.label :measurement_unit, class: "form-label" %>
        <%= form.text_field :measurement_unit, class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= form.label :price, class: "form-label" %>
        <%= form.number_field :price, class: "form-control" %>
      </div>

      <div class="actions d-flex justify-content-end mt-4">
        <%= form.submit "Create Food", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<div class="container d-flex justify-content-center">
  <div class="form-container  mb-3 col-6 justify-content-center">
    <h1>NEW FOOD</h1> 

    <%= form_with(model: [@inventory, @inventory_food], url: inventory_foods_path(@inventory)) do |form| %>
      <div class="field mb-3">
        <%= form.label :quantity, class: "form-label" %>
        <%= form.text_field :quantity, class: "form-control" %>
      </div>

      <div class="field mb-3">
        <%= form.label :food_id, class: "form-label" %>
        <%= form.collection_select :food_id, Food.all, :id, :name, {}, class: "form-control form-select mb-3" %>
      </div>

      <div class="actions d-flex justify-content-end">
        <%= form.submit "Create Food", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
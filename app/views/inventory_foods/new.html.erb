<div>
  <h1>Add a Food for your recipe!</h1>

  <%= form_with(model: [@inventory, @inventory_food], url: inventory_foods_path(@inventory)) do |form| %>
    <div class="field">
      <%= form.label :quantity %>
      <%= form.text_field :quantity %>
    </div>

    <div class="field">
      <%= form.label :food_id %>
      <%= form.collection_select :food_id, Food.all, :id, :name %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>
<% @inventories.each do |inventory| %>
  <div class="inventory-card card p-3" <%= 'owned' if inventory.user == current_user %>">
    <%= link_to inventory, class: "inventory-link" do %>
      <%= render partial: 'shared/inventory', locals: { inventory: inventory } %>
    <% end %>
    <% if inventory.user == current_user %>
      <%= button_to "Remove", inventory_path(inventory), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary", remote: true %>
    <% else %>
      <%= button_to "Remove", inventory_path(inventory), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary disabled", remote: true, disabled: true %>
    <% end %>
  </div>
<% end %>


